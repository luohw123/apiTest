<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper  
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="com.javaapi.test.dao.mybatis.springInterface.mapper.SocialMapper">  
<!-- 可以实现更灵活的配置 -->
<resultMap  id="socialResultId" type="com.javaapi.test.dao.mybatis.Social">
	   <result column="id" property="id" />
       <result column="name" property="name" />
       <result column="phone" property="phone" />
       <result column="email" property="email"  />
</resultMap>


   <select id="getUserList" resultType="com.javaapi.test.dao.mybatis.Social">  
        select * from sns_social  
    </select>  
   <select id="getTop1User" resultType="com.javaapi.test.dao.mybatis.Social">  
       SELECT *  FROM csc_sns_dev.sns_social where id='0013399d-1392-4c2a-b196-0f8119e15bad';
    </select>  
    
     <select id="getTop1UserResultMap" resultMap="socialResultId">  
       SELECT *  FROM csc_sns_dev.sns_social where id='0013399d-1392-4c2a-b196-0f8119e15bad';
    </select>  
     <select id="setUser" resultType="com.javaapi.test.dao.mybatis.Social">  
        insert into  sns_social(id,name,phone,email)values(#{id},#{name},#{phone},#{email});
    </select>  
    <select id="countUser" resultType="Integer">
    	select count(1) from csc_sns_dev.tbl_b;
    </select>
</mapper> 

 