<?xml version="1.0" encoding="UTF-8" ?>
    <!DOCTYPE mapper 
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBookDao">
	<resultMap type="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" id="CashBook">
		<result property="id" column="id" />
		<result property="accountId" column="account_id"/>
		<result property="balance" column="balance" />
		<result property="version" column="version" />
	</resultMap>
	<select id="selectOne" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" resultMap="CashBook">
		SELECT * FROM cash_book WHERE account_id =#{accountId};
	</select>
	<update id="updateBalance" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" >
		UPDATE cash_book c 
		<set>
			c.version = c.version +1,
			c.balance = #{balance}
		</set>
		WHERE c.account_id=#{accountId}  AND c.version =#{version}
	</update>
	
	
	<select id="selectOne_2" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" resultMap="CashBook">
		SELECT * FROM cash_book_2 WHERE account_id =#{accountId};
	</select>
	<update id="updateBalance_2" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" >
		UPDATE cash_book_2 c 
		<set>
			c.version = c.version +1,
			c.balance = #{balance}
		</set>
		WHERE c.account_id=#{accountId}  AND c.version =#{version}
	</update>
	
	
	
	<select id="selectOneForUpdate" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" resultMap="CashBook">
		SELECT * FROM cash_book  WHERE account_id =#{accountId}  FOR UPDATE
	</select>
	<update id="update" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" >
		UPDATE cash_book c 
		<set>
			c.balance = #{balance}
		</set>
		WHERE c.account_id=#{accountId} 
	</update>
	
	<select id="selectOneForUpdate_2" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" resultMap="CashBook">
		SELECT * FROM cash_book_2  WHERE account_id =#{accountId}  FOR UPDATE
	</select>
	<update id="update_2" parameterType="com.javaapi.test.dao.mybatis.springInterface.optimisticLock.CashBook" >
		UPDATE cash_book_2 c 
		<set>
			c.balance = #{balance}
		</set>
		WHERE c.account_id=#{accountId} 
	</update>
</mapper>